{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}